{
  "name": "booking",
  "private": true,
  "logo": {
    "font": "./.fonts/Capriola-Regular.ttf",
    "fontSzie": 72,
    "logo": "Booking",
    "output": "logo.svg",
    "path": {
      "fill": "#f86c28"
    }
  },
  "version": "0.0.0",
  "description": "The goal of this simple app is to book a prestation at home",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cz": "git-cz",
    "cc": "conventional-changelog",
    "release": "standard-version",
    "logo": "npx logo.svg && npx convert-svg-to-png logo.svg && rm -f logo.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kane-thornwyrd/booking.git"
  },
  "author": "Jean-cédric Thérond <jean.cedric.t@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kane-thornwyrd/booking/issues"
  },
  "homepage": "https://github.com/kane-thornwyrd/booking#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "7.3.1",
    "commitizen": "3.0.5",
    "commitlint": "7.3.1",
    "cz-conventional-changelog": "2.1.0",
    "git-precommit-checks": "1.2.0",
    "husky": "1.3.1",
    "precise-commits": "1.0.2",
    "prettier": "1.15.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "git-precommit-checks && precise-commits"
    }
  },
  "hooks": {
    "pre-commit": [
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "filter": "\\.jsx?$",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "filter": "\\.jsx?$",
        "message": "You have unfinished devs",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  }
}
